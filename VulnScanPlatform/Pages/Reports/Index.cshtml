@page
@model VulnScanPlatform.Pages.Reports.IndexModel

@{
    ViewData["Title"] = "Rapoarte";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Rapoarte</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            ID Raport
                        </th>
                        <th>
                            Numele Aplicației
                        </th>
                        <th>
                            ID Scanare
                        </th>
                        <th>
                            Data Generării
                        </th>
                        <th>Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Report)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Scan.Application.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Scan.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalii</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Șterge</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>